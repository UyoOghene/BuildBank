<% layout('layout') %>
<h2>All Projects</h2>
<ul>
    <% projects.forEach(project => { %>
        <li>
          <a href="/projects/<%= project._id %>"><%= project.name %></a>
      
          <span><form action="/projects/<%= project._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button id="delbtn" type="submit" onclick="return confirm('Delete this project and all its entries?')">🗑️</button>
          </form>
        </span>
        </li>
      <% }) %>
      </ul>