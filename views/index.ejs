<!DOCTYPE html>
<html>
<head>
  <title>Construction Expense Tracker</title>
</head>
<body>
  <h1>Construction Expense Tracker</h1>
  <form action="/add" method="POST">
    <input name="description" placeholder="Description" required>
    <input name="amount" type="number" step="0.01" placeholder="Amount" required>
    <input name="quantity" type="number" placeholder="Quantity" required>
    <select name="type">
      <option value="expense">Expense</option>
      <option value="income">Income</option>
    </select>
    <button type="submit">Add Entry</button>
  </form>

  <h3>Entries</h3>
  <table border="1">
    <tr>
      <th>Description</th><th>Amount</th><th>Quantity</th><th>Type</th><th>Total</th>
    </tr>
    <% data.forEach(item => { %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.amount %></td>
        <td><%= item.quantity %></td>
        <td><%= item.type %></td>
        <td><%= item.amount * item.quantity %></td>
      </tr>
    <% }) %>
  </table>

  <h3>Total Income: ₦<%= income %></h3>
  <h3>Total Expenses: ₦<%= expenses %></h3>
  <h3>Balance: ₦<%= income - expenses %></h3>

  <a href="/export"><button>Export to Excel</button></a>
</body>
</html>
